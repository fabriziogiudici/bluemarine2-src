#!/bin/sh

if [ ! -d /opt/[[tft.deb.name]] ]; then # fix for supporting upgrade from an older version
    deluser [[tft.deb.user]]
    echo "Files under /var/lib/[[tft.deb.directory]]/ not deleted."
    echo "Files under /var/log/[[tft.deb.directory]]/ not deleted."
    echo "Files under /var/cache/[[tft.deb.directory]]/ not deleted."
    fi
